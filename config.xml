<?xml version='1.0' encoding='utf-8'?>
<widget id="com.security-guard.com" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Security</name>
    <description>
        Security
    </description>
    <author email="info@wps-dev.com" href="https://wps-dev.com/">
       WPS team
    </author>
    <content src="test.html" />
   <plugin name="cordova-plugin-device" spec="^1.1.0" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="com.telerik.plugins.nativepagetransitions" spec="^0.6.5" />
    <plugin name="cordova-plugin-inappbrowser" spec="^2.0.2" />
    <plugin name="cordova-plugin-datepicker" spec="^0.9.3" />
     <plugin name="cordova-plugin-whitelist" version="1"/>
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
	<plugin name="cordova-plugin-mobile-ocr" spec="^3.1.1" />
    <plugin name="cordova-plugin-camera" source="npm" spec="~2.1.1" />
	
	<plugin name="phonegap-plugin-push"  spec="1.9.0"/>
    <plugin spec="https://github.com/apache/cordova-plugin-device.git" source="git" />
	
	<platform name="android">
        <icon density="ldpi" src="www/res/icon/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="www/res/icon/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="www/res/icon/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="www/res/icon/android/icon-96-xhdpi.png" />
		
       
	 <resource-file src="google-services.json" target="app/google-services.json" />   
     
  
   </platform>
   
   <splash qualifier="ldpi" platform="android" src="www/res/screen/android/screen-ldpi-landscape.png" />
        <splash qualifier="mdpi" platform="android" src="www/res/screen/android/screen-mdpi-landscape.png" />
        <splash qualifier="xhdpi" platform="android" src="www/res/screen/android/screen-xhdpi-landscape.png" />
        <splash qualifier="hdpi" platform="android" src="www/res/screen/android/screen-hdpi-portrait.png" />
        <splash qualifier="ldpi" platform="android" src="www/res/screen/android/screen-ldpi-portrait.png" />
        <splash qualifier="mdpi" platform="android"  src="www/res/screen/android/screen-mdpi-portrait.png" />
        <splash qualifier="xhdpi" platform="android" src="www/res/screen/android/screen-xhdpi-portrait.png" />
     <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
     <preference name='phonegap-version' value='cli-7.0.1' />
   <preference name='pgb-builder-version' value='1' />
	 <preference name="android-minSdkVersion" value="26" />
	 
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
